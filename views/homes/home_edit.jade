        a.w3-text-grey.w3-hover-black(href='/auth/logout') Log Out

    // First Parallax Image with Logo Text
    form(action='/byl/home/edit1' method='post')
      #home.bgimg-1.w3-display-container.w3-opacity
        .w3-display-middle1(style='white-space:nowrap;')
          span.w3-center.w3-padding-xlarge.w3-black.w3-xlarge.w3-wide.w3-animate-opacity
            input(type='text' name='byl_title1', value=home[0].byl_title1 placeholder='BYL_Title1')        
            span.w3-hide-small              
              input(type='text' name='byl_title2', value=home[0].byl_title2 placeholder='BYL_Title2')        
              input(type='submit')
      // Container (About Section)
      #about.w3-content.w3-container.w3-padding-64
        h3.w3-center
          input(type='text' name='byl_topic', value=home[0].byl_topic placeholder='BYL_Topic')
        p.w3-center
          em
            textarea(name='byl_description' placeholder='BYL_Description')
