          .w3-col.m8.w3-container.w3-section
            .w3-large.w3-margin-bottom
              i.fa.fa-map-marker.w3-hover-text-black(style='width:30px')
              input(type='text' name='address', value=home[0].address placeholder='Address' size='40')
              br
              i.fa.fa-phone.w3-hover-text-black(style='width:30px')
              input(type='text' name='number', value=home[0].number placeholder='Number')
              br
              i.fa.fa-envelope.w3-hover-text-black(style='width:30px')  
              input(type='text' name='email', value=home[0].email placeholder='E-mail')
              br
            p
              input(type='text' name='phrase', value=home[0].phrase placeholder='Phrase' size='40')
            input.w3-input.w3-border.w3-hover-light-grey(type='text', placeholder='Comment')
            button.w3-btn.w3-section.w3-right SEND
    
    // Google Maps IMG
    script(src='http://maps.googleapis.com/maps/api/js?key=AIzaSyA71DlK6jEvzSuClqAWMfgFuLx2R53J3XM')
    // Google Map Script
    script.
      var myCenter=new google.maps.LatLng(37.497991, 126.992441);
      function initialize(){
        var mapProp = {
          center:myCenter,
          zoom:17,
          mapTypeId:google.maps.MapTypeId.ROADMAP
        };
        var map=new google.maps.Map(document.getElementById("googleMap"),mapProp);
        var marker=new google.maps.Marker({
          position:myCenter,
        });
        marker.setMap(map);
        var infowindow = new google.maps.InfoWindow({
          content:"Briantrianon"
        });
        infowindow.open(map,marker);
      }
      google.maps.event.addDomListener(window, 'load', initialize);
      // Change style of navbar on scroll
      window.onscroll = function() {myFunction()};
      function myFunction() {
        var navbar = document.getElementById("myNavbar");
        if (document.body.scrollTop > 100 || document.documentElement.scrollTop > 100) {
          navbar.className = "w3-navbar" + " w3-card-2" + " w3-animate-top" + " w3-white";
        } else {
          navbar.className = navbar.className.replace(" w3-card-2 w3-animate-top w3-white", "");
        }
      }
      // Open and close sidenav
      function w3_open() {
        document.getElementById("mySidenav").style.width = "240px";
        document.getElementById("mySidenav").style.display = "block";
      }
      function w3_close() {
        document.getElementById("mySidenav").style.display = "none";
      }
