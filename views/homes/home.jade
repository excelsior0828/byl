html
  title Blossom Your Life
  meta(charset='UTF-8')
  meta(name='viewport', content='width=device-width, initial-scale=1.0')
  meta(http-equiv='X-UA-Compatible', content='ie=edge')
  link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Lato')
  link(rel='stylesheet', href='http://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.6.3/css/font-awesome.min.css')
  link(rel='stylesheet', href='http://localhost:3000/styles/by1.css')
  link(rel='stylesheet', href='http://localhost:3000/styles/by11.css')
  link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Montserrat')
  body
    // Navbar (Home)
    .w3-top
      ul#myNavbar.w3-navbar
        li
          a.w3-padding-large(href='/byl') HOME
        li.w3-hide-small.w3-right
          a.w3-hover-red(href='#' onclick='w3_open()' style="padding:18px 21px")
            i.fa.fa-search
    // Navbar (Search)
    nav#mySidenav.w3-sidenav.w3-black.w3-card-2.w3-animate-top.w3-center.w3-xlarge.w3-display-topright(style='display:none;height:auto;')
      a.w3-closenav.w3-xlarge.w3-right.w3-display-topright(href='javascript:void(0)', onclick='w3_close()', style='padding:14px 19px')
        i.fa.fa-remove
      a.w3-text-grey.w3-hover-black(href='/byl/flower') Flowers
      a.w3-text-grey.w3-hover-black(href='/byl/travel') Travels
      a.w3-text-grey.w3-hover-black(href='/byl/other') Others
      if user
        a.w3-text-grey.w3-hover-black(href='/byl/home/edit') Edit
        a.w3-text-grey.w3-hover-black(href='/auth/logout') Log Out
      else
        a.w3-text-grey.w3-hover-black(href='/auth/login') Administrator
    // First Parallax Image with Logo Text
    #home.bgimg-1.w3-display-container.w3-opacity-min
      .w3-display-middle1(style='white-space:nowrap;')
        span.w3-center.w3-padding-xlarge.w3-black.w3-xlarge.w3-wide.w3-animate-opacity
          =home[0].byl_title1
          span.w3-hide-small  
            =home[0].byl_title2
    #about.w3-content.w3-container.w3-padding-64
      h3.w3-center
        =home[0].byl_topic
      p.w3-center
        em
          =home[0].byl_description
      p
        =home[0].web_intro
      .w3-row
        .w3-col.m6.w3-center.w3-padding-large
          p
            b
              i.fa.fa-user.w3-margin-right
              =home[0].name
          br
          img.w3-round.w3-image.w3-opacity.w3-hover-opacity-off(src='http://localhost:3000/uploads/background/home/pp.jpg', alt='Photo of Me', width='500', height='333')
        // Hide this text on small devices
        .w3-col.m6.w3-hide-small.w3-padding-large
          p
            =home[0].my_intro
      p.w3-large.w3-center.w3-padding-16 
        =home[0].skill_topic
      p.w3-wide
        =home[0].skill1
      .w3-progress-container
        .w3-progressbar(style='width:90%')
      p.w3-wide
        =home[0].skill2
      .w3-progress-container
        .w3-progressbar(style='width:85%')
      p.w3-wide
        =home[0].skill3
      .w3-progress-container
        .w3-progressbar(style='width:75%')
    .w3-row.w3-center.w3-dark-grey.w3-padding-16
      span.w3-center
      .w3-quarter.w3-section
        span.w3-xlarge +
          =home[0].number1
        br
        =home[0].activity1
      .w3-quarter.w3-section
        span.w3-xlarge +
          =home[0].number2
        br
        =home[0].activity2
      .w3-quarter.w3-section
        span.w3-xlarge +
          =home[0].number3
        br
        =home[0].activity3
      .w3-quarter.w3-section
        span.w3-xlarge
          =home[0].number4
        br
        =home[0].activity4
    // Second Parallax Image with Portfolio Text
    .bgimg-2.w3-display-container
      .w3-display-middle
        span.w3-xxlarge.w3-text-light-grey.w3-wide
          =home[0].portfolio_title
    // Photo Grid
    .w3-container.w3-padding-64
      h3.w3-center
        =home[0].portfolio_topic
      p.w3-center
        em
          =home[0].portfolio_description
      .w3-row.w3-center.w3-padding-16
        .responsive
          .interest
            a(target='_self', href='http://localhost:3000/byl/flower')
              img(src='http://localhost:3000/uploads/background/home/interest1.jpg')
              .transtext 
                =home[0].interest_a
        .responsive
          .interest
            a(target='_self', href='http://localhost:3000/byl/travel')
              img(src='http://localhost:3000/uploads/background/home/interest2.jpg')
              .transtext
                =home[0].interest_b
        .responsive
          .interest
            a(target='_self', href='http://localhost:3000/byl/other')
              img(src='http://localhost:3000/uploads/background/home/interest3.jpg')
              .transtext
                =home[0].interest_c
      .clearfix
    // Third Parallax Image with Portfolio Text
    .bgimg-3.w3-display-container
      .w3-display-middle
        span.w3-xxlarge.w3-text-light-grey.w3-wide
          =home[0].contact_title
    // Container (Contact Section)
    .w3-content.w3-container.w3-padding-64
      h3.w3-center
        =home[0].contact_topic
      p.w3-center
        em
          =home[0].contact_description
      .w3-row.w3-padding-32.w3-section
        .w3-col.m4.w3-container
          // Add Google Maps
          #googleMap.w3-round-large.w3-greyscale(style='width: 100%; height:400px; position:relative; overflow:hidden;')
        .w3-col.m8.w3-container.w3-section
          .w3-large.w3-margin-bottom
            i.fa.fa-map-marker.w3-hover-text-black(style='width:30px')
            =home[0].address
            br
            i.fa.fa-phone.w3-hover-text-black(style='width:30px')
            =home[0].number
            br
            i.fa.fa-envelope.w3-hover-text-black(style='width:30px')  
            =home[0].email
            br
          p
            =home[0].phrase
          //email form tag
          form(action="mailto:bloomlife77@gmail.com" method="post" enctype="text/plain")
            input.w3-input.w3-border.w3-hover-light-grey(type="text" name="comment" placeholder="이메일로 댓글 보내주시면 감사하겠습니당!")
            input.w3-btn.w3-section.w3-right(type="submit" value="댓글 보내기")
    // Google Maps IMG
    script(src='http://maps.googleapis.com/maps/api/js?key=AIzaSyA71DlK6jEvzSuClqAWMfgFuLx2R53J3XM')
    // Google Map Script
    script.
      var myCenter=new google.maps.LatLng(37.497991, 126.992441);
      function initialize(){
        var mapProp = {
          center:myCenter,
          zoom:17,
          mapTypeId:google.maps.MapTypeId.ROADMAP
        };
        var map=new google.maps.Map(document.getElementById("googleMap"),mapProp);
        var marker=new google.maps.Marker({
          position:myCenter,
        });
        marker.setMap(map);
        var infowindow = new google.maps.InfoWindow({
          content:"Briantrianon"
        });
        infowindow.open(map,marker);
      };
      google.maps.event.addDomListener(window, 'load', initialize);
    //navbar & sidenave
    include ../layout/includes_navbar.jade
